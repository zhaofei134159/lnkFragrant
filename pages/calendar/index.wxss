/**index.wxss**/
.all {
  width:98%;
  height:100%;
  margin:0 auto;
}
.title{
  width: 100%;
  height: 1.5rem;
  line-height: 1.5rem;
  font-size: 12px;
}
.title-left{
  width:50%;
  height:100%;
  float:left;
}
.title-right{
  width:50%;
  height:100%;
  float:right;
  text-align: right;
}
.title-right .calendar-type{
  width: 25px;
  height: 100%;
  float: right;
}
.calendar-type .title-icon{
     width: 15px;
    height: 15px;
    vertical-align: sub;
}
.main{
  width: 100%;
  min-height: 4rem;
  background: green;
}
.main .week{
    width: 100%;
    height: 1.5rem;
    background: red;
    text-align: center;
    font-size: 10px;
    line-height: 1.5rem;
}
.week .week-title{
  width: 14%;
  height: 100%;
  display: inline-block;
}
.main-data{
  width: 100%;
  height: auto;
  background: blue;
}