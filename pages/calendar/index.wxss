/**index.wxss**/
.all {
  width:100%;
  height:100%;
}
.center{
  width:98%;
  height:100%;
  margin:0 auto;
}
.title{
  width: 100%;
  height: 1.5rem;
  line-height: 1.5rem;
  font-size: 12px;
}
.title-left{
  /*width:50%;*/
  height:100%;
  float:left;
  padding-left: 1rem;
}
.title-right{
  /*width:50%;*/
  height:100%;
  float:right;
  text-align: right;
  padding-right: 1rem;
}
.title-right .calendar-type{
  width: 25px;
  height: 100%;
  float: right;
}
.calendar-type .title-icon{
  width: 15px;
  height: 15px;
  vertical-align: sub;
}

.content {
  position: absolute;
  z-index: 999;
  border-radius: 16rpx ;
  opacity: 1;
  padding: 10rpx 40rpx;
  overflow-x: hidden;
  overflow-y: scroll;
  width: 8rem;
  background: #fff;
}
.content-item{
  width: 100%;
  height: 28px;
  line-height: 28px;
}
.content .content-left{
  font-size: 14px;
  font-weight: 400;
  width: 50%;
  height:100%;
  float: left;
  display: inline-block;
}
.content .content-right{
  width: 50%;
  height:100%;
  float: right;
  display: inline-block;
  text-align: right;
}
.content-right .img{
  width: 22px;
  height: 22px;
  vertical-align: sub;
}
.view-index .mask{
  position: absolute;
  z-index: 888;
  width:100%;
  height:100%;
  background: gray;
  opacity: 0.1;
  top: 0px;
  left: 0px;
}

.main{
  width: 100%;
  min-height: auto;
  /*box-shadow: 0 2px 0px #dcdfe2;*/
}
.main .week{
    width: 100%;
    height: auto;
    text-align: center;
    font-size: 10px;
}
.week .week-title{
  width: 100%;
  height: 1.5rem;
  line-height: 1.5rem;
}
.week .week-date-data{
  width: 100%;
  height: auto;
  padding: 0.5rem 0rem;
}
.week .month-date-data{
  width: 100%;
  height: auto;
  text-align: left;
}
.week .week-item,.data-item{
  width: 14%;
  height: 100%;
  display: inline-block;
}
.week .data-item{
  padding: 0.5rem 0rem;
  text-align: center;
}
.week .down-bar{
    width: 100%;
    height: 0.3rem;
}
.week .down-bar .bartab{
  width: 15%;
  background: #3d3d3d;
  height: 100%;
  margin: 0 auto;
}
.main-data{
  width: 100%;
  height: auto;
  background: blue;
}