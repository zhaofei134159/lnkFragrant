<!--index.wxml-->
<navigation-bar title="" back="{{false}}" color="#3f3d3d" background="#FFF"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
	<view class="all">
		<scroll-view scroll-y="true" style="height:{{scrollH}}px" bindscrolltolower="loadImages">
			<view style="width:100%">
				<view class="img_item">
					<view wx:for="{{col1}}" wx:key="id">
						<image src="{{item.pic}}" style="width:100%;height:{{item.height}}px"></image>
					</view>
				</view>
				<view class="img_item">
					<view wx:for="{{col2}}" wx:key="id">
						<image src="{{item.pic}}" style="width:100%;height:{{item.height}}px"></image>
					</view>
				</view>
			</view>
		</scroll-view>
		<!-- 空列表提示 -->
		<view  wx:if="{{ listData.length == 0 }}" class="flex flex-column flex-items-center">
			<image class="data-img" lazy-load mode="widthFix" src="/images/no-result.png" />
			<view>还没有数据哦~</view>
		</view>
		<!-- 置底了 -->
		<view wx:if="{{ reachBottom }}" class="flex flex-center">
		  ~ 到底啦 ~
		</view>
	</view>
</scroll-view>
