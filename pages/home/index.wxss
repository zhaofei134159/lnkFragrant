/**index.wxss**/
.all {
  width:100%;
  height:100%;
  background:#eee;
  /*background:#eee;*/
}
.section{
  width:100%;
  height:3.0rem;
  background:#eee;
  align-items: center;
  display: flex;
}
.search{
  background:#fff;
  margin:0 auto;
  width:89%;
  height:1.9rem;
  border-radius:0.2rem;
  display: flex;
  flex-direction:column;
  padding-left:1rem;
}
.nav{
  /*border-top: solid 1px #3d3d3d;*/
  /*border-bottom: solid 1px #3d3d3d;*/
  margin: 0.4rem 0rem 0rem;
}
.swiper {
  width: 100%;
  height: 8rem;
  border-top: solid 1px #eee;
  border-bottom: solid 1px #eee;
}
.img {
  width:100%;
  height:100%;
}
.diaryLs{
  width: 100%; 
  background: #eee;
  height: auto; 
  display: block; 
  margin: 0 auto;
}
.diary{
  width:100%;
  background: #fff;
  height: 10rem;
  margin: 0.1rem auto 0.2rem;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
}
.diary-top{
  width: 95%;
  height: 25%;
  margin: 0 auto;
}
.diary-main-top{
  width: 100%;
  height: 100%;
  float: left;
}
.diary-top-left{
  width: 70%;
  height: 100%;
  float: left;
}
.diary-top-head {
  width: 2rem;
  height: 2rem;
  float: left;
  text-align: center;
}
.diary-top-head .img{
  width: 90%;
  height: 90%;
  border-radius: 50%;
  margin-top:5%;
}
.diary-top-name-date{
  width: 70%;
  height: 100%;
  float: left;
  padding-left: 5px;
  font-size: 11px;
}
.diary-top-name{
  width: 100%;
  height: 50%;
  float: left;
}
.diary-top-date{
  width: 100%;
  height: 50%;
  float: left;
}
.diary-top-right{
  width: 30%;
  height: 100%;
  float: left;
}
.diary-more{
  width:30%;
  height:100%;
  float:right;
  text-align:center;
  color: #ccc;
}

.diary-center{
  width:95%;
  height: 60%;
  /*background: #ccc;*/
  font-size: 12px;
  margin: 0 auto;
  border-top: solid 1px #ccc;
  border-bottom: solid 1px #ccc;
  text-indent: 1rem;
}
.diary-bottom{
  width:95%;
  height: 15%;
  font-size: 12px;
  line-height: 30px;
  margin: 0 auto;
}
.diary-bottom-left {
  /*width: 70%;*/
  height: 100%;
  float:left;
  font-size: 12px;
  text-align: center;
}
.diary-bottom-center {
  /*width: 15%;*/
  height: 100%;
  float:right;
  font-size: 12px;
}
.diary-bottom-right {
  /*width: 15%;*/
  height: 100%;
  float:right;
  font-size: 12px;
  margin-right:10px;
}
.diary-bottom-img{
  /*width: 48%;*/
  height: 100%;
  float: left;
}
.diary-bottom-text{
  /*width: 48%;*/
  height: 100%;
  float: left;
  text-align:left;
  line-height:1.5rem;
  margin-left:2px;
}
.diary-bottom-img .icon{
  width:1.1rem;
  height:1.1rem;
  float:right;
  margin-top: 0.2rem;
  margin-right:2px;
}
.diary-bottom .diary-bottom-text{
  float:left;
}
